                        <button type="submit" class="btn btn-primary">  
                    @{
                        if(Model.Id==0)
                        {
                            <span>اضافة</span>
                        }else
                        {
                             <span>تعديل</span>
                        }
                    }
                            
                            
                        </button>

                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">اغلاق</button>

                    </div>

        </form>
    </div>
</div>

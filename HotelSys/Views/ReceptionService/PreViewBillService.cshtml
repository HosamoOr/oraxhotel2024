@model HotelSys.ViewModel.showServiceBillVM
@{
    ViewData["Title"] = "showInvoice";
    Layout = null;
}
  
                <!-- end page title end breadcrumb --> 
<div class="row">

<div class="card">
  <div class="card-body">
    <div class="container mb-10 mt-3">
      <div class="row d-flex align-items-baseline">
        <div class="col-xl-9">
          <p style="color: #7e8d9f;font-size: 15px;">فاتورة خدمات ضريبية  >> <strong>ID: #@Model.billData.Id</strong></p>
        </div>
        <div class="col-xl-3 float-end d-print-none">
          <a class="btn btn-light text-capitalize border-0" onclick="javascript:window.print()" data-mdb-ripple-color="dark"><i
              class="fas fa-print text-primary"></i> طباعة</a>
          <a class="btn btn-light text-capitalize" data-mdb-ripple-color="dark"><i
              class="far fa-file-pdf text-danger"></i> Export</a>
        </div>
        <hr>
      </div>


        <div class="row d-flex align-items-baseline">
         <div class="col-md-9">
          <div class="text-center">
            @*<i class="fab fa-mdb fa-4x ms-0" style="color:#5d9fc5 ;"></i>*@
             <ul class="list-unstyled ">
            <li style="font-size: 19px; color: red;">@Model.hotelData.NameH</li>
            <li>@Model.hotelData.Address</li>
            <li>@Model.hotelData.Phone</li>
            <li>@Model.hotelData.Email</li>
            </ul>
          </div>

        </div> 
        
      
           <div class="col-xl-3 float-end d-print-none">
            @{
                                            if (@Model.hotelData.Logo == "")
                                            {
                                                <img src="~/img/logo.jpg" alt="صورة شعار المؤسسة" width="70" height="70">
                                            }
                                            else
                                            {
                                                <img src="@Model.hotelData.Logo" alt="صورة شعار المؤسسة" width="70" height="70">
                                            }
                                        }
         
          </div>
            <hr>
    </div>

      <div class="container">
       
        


        <div class="row">
          <div class="col-xl-7">
            <ul class="list-unstyled">
              <li class="text-muted"> رقم الفاتورة: <span style="color:#5d9fc5 ;">@Model.billData.Id</span></li>
              <li class="text-muted">اسم العميل: <span style="color:#5d9fc5 ;">@Model.billData.nameCustomer</span></li>
              <li class="text-muted">التاريخ : <span style="color:#5d9fc5 ;">@Model.billData.Date.Date.ToShortDateString()</span></li>
             
                                @{
                                    if(Model.billData.IsForRoom==true)
                                    {
                                         <li class="text-muted">للغرفة  : <span style="color:#5d9fc5 ;">@Model.billData.room</span></li>
                                        <li class="text-muted">رقم الحجز  : <span style="color:#5d9fc5 ;">@Model.billData.IdReception</span></li>
                                    }
                                    else
                                    {
                                         <li class="text-muted">  <span style="color:#5d9fc5 ;">فاتورة خدمات خارجية</span></li>
                                        
                                    }
                                }
             
             
            </ul>
          </div>
          <div class="col-xl-4">
           
         @*   <ul class="list-unstyled">
              <li class="text-muted"><i class="fas fa-circle" style="color:#84B0CA ;"></i> <span
                  class="fw-bold">رقم فاتورة العقد:</span>#@Model.receptionData.bill.Id</li>
              <li class="text-muted"><i class="fas fa-circle" style="color:#84B0CA ;"></i> <span
                  class="fw-bold">تاريخ بداية الحجز: </span> @Model.receptionData.StartDate</li>
              <li class="text-muted"><i class="fas fa-circle" style="color:#84B0CA ;"></i> <span
                  class="me-1 fw-bold">تاريخ انتهاء الحجز:</span><span class="badge bg-warning text-black fw-bold">
                  @Model.receptionData.EndDate</span></li>
            </ul>*@
          </div>
        </div>

        <div class="row my-2 mx-1 justify-content-center">
          <table class="table table-striped table-borderless">
            <thead style="background-color:#84B0CA ;" class="text-white">
              <tr>
                <th scope="col">اسم الصنف</th>
                <th scope="col">سعر الوحدة</th>
                <th scope="col">الكمية</th>
                @*<th scope="col">المبلغ الخاضغ للضريبة</th>*@
                <th scope="col">نسبة الضريبة</th>
                <th scope="col">مبلغ الضريبة</th>
                <th scope="col">نسبة ضريبة بلدي</th>
                <th scope="col"> مبلغ ضريبة بلدي</th>
                <th scope="col">الاجمالي الكلي (شامل الضريبة) </th>
              </tr>
            </thead>
            <tbody>
                 @foreach (var item in Model.billData.Items)
                            {
                                  <tr>
                <th scope="row">@item.NameProduct</th>
                <td>@item.PriceOne</td>
                <td>@item.Qty</td>
                <td>@item.TaxRate</td>
               <td>@item.TaxPrice</td>
               <td>@item.BaladiTaxRate</td>
               <td>@item.BaladiTaxPrice</td>
               <td>@item.Total</td>
              </tr>

                            }


             
            
            </tbody>

          </table>
        </div>
        <div class="row">
          
          <div class="col-xl-10">
            <ul class="list-unstyled">
                 <li class="text-muted"> الاجمالي قبل الضريبية : <span style="color:#5d9fc5 ;">@Model.billData.TotalBeforVAT</span></li>

        
             
               <li class="text-muted"> مجموع الضريبة  (@Model.billData.TotalTaxRate%)  : <span style="color:#5d9fc5 ;">  @Model.billData.TotalTaxPrice </span></li>

               <li class="text-muted "> مجموع ضريبة بلدي <span style="color:#5d9fc5 ;">   (@Model.billData.TotalTaxRate%)  : @Model.billData.TotalBaladiTaxPrice </span> </li>
             <li class="text-muted ">  اجمالي المبالغ المستحقة :  <span style="color:#5d9fc5 ;">@Model.billData.Total </span> </li>
            </ul>
          @*  <p class="text-black float-start"><span class="text-black me-3"> الرصيد</span><span
                style="font-size: 25px;">@Model.receptionData.summaryPrice.balancer</span></p>*@
          </div>
        </div>
         <div class="row">
         <div class="col-md-12">
          <div class="text-center">
             @{
                if (Model.qR.bytes != null)
                {
                   
                    <img src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(Model.qR.bytes))" />
                }
            }
          </div>

        </div> 
        </div>

        <hr>
        <div class="row d-print-none">
          <div class="col-xl-10">
            <p>Thank you </p>
          </div>
         @* <div class="col-xl-2">
            <button type="button" class="btn btn-primary text-capitalize"
              style="background-color:#60bdf3 ;">...</button>
          </div>*@
        </div>

      </div>
    </div>
  </div>
</div>

</div>

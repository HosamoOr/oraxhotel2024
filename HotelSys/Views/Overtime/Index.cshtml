@model IEnumerable<DataModels.OvertimeTable>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="page-wrapper">

    <!-- Page Content-->
    <div class="page-content-tab">

        <div class="container-fluid">
            <!-- Page-Title -->
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-title-box">
                        <div class="float-end">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">الاعدادات</a></li>
                                <li class="breadcrumb-item"><a href="#">اوقات الذروة  </a></li>
                            </ol>
                        </div>
                        <h4 class="page-title">اوقات الذروة </h4>
                    </div>
                    <!--end page-title-box-->
                </div>
                <!--end col-->
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-title-box">
                        <div class="float-end">

                             <button type="button" class="btn btn-primary" style="margin-bottom:10px"
                                    onclick="@("window.location.href='" + @Url.Action("Create", "Overtime") + "'");"
                                        new { id=5 })">

                                <i class="fa fa-plus"></i> وقت ذروة جديد
                                </button>


                           @* <button class="btn btn-success" style="margin-bottom:10px" href="@Url.Action("Create","Overtime")">
                                <i class="fa fa-plus"></i> وقت ذروة جديد
                            </button>*@


                         

                        </div>
                        <h4 class="page-title"></h4>
                    </div>
                    <!--end page-title-box-->
                </div>

                <div class="table-responsive">
                    <table class="table">
                        <thead class="thead-light">
                            <tr>
                                <th>وقت البدء</th>
                                <th>وقت الانتهاء  </th>
                                <th>تاريخ البدء</th>
                                <th>تاريخ الانتهاء</th>

                                <th>تاريخ الانشاء</th>
                                <th>UserID</th>

                                <th class="text-right">Action</th>
                            </tr><!--end tr-->
                        </thead>

                        <tbody>

                            @{
                                foreach (var item in Model)
                                {
                                                        <tr>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.StartDate)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.EndDate)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.StartTime)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.EndTime)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Createat)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.IdUser)
                                                            </td>
                                                            <td>
                                                                <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit text-success font-18"></i></a>
                                                                <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash text-danger font-18"></i></a>

                                                               
                                                                <a asp-action="Details" asp-route-id="@item.Id"><i class="las fa-list text-secondary font-18"></i></a>
                                                            </td>
                                                        </tr><!--end tr-->
                                }
                            }

                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col">
                        @*<button class="btn btn-outline-light btn-sm px-4 " >+ Add New</button>*@
                    </div><!--end col-->
                    <div class="col-auto">
                        <nav aria-label="...">
                            <ul class="pagination pagination-sm mb-0">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                                </li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                                </li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#">Next</a>
                                </li>
                            </ul><!--end pagination-->
                        </nav><!--end nav-->
                    </div> <!--end col-->
                </div><!--end row-->
                <!--end col-->
            </div>

        </div>
    </div>
</div>

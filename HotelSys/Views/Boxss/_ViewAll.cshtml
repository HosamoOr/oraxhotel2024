@model IEnumerable<HotelSys.ViewModel.BoxViewModel>

    <div class="table-responsive">
    <table class="table mb-0 table-centered">
            <thead class="thead-light">
                 <tr>
                  <th># </th>
                    <th>اسم الصندوق</th>
                <th>رقم ح/الصندوق</th>
              
                <th> الحالة الافتراضية</th>
               
                <th class="text-end">Action</th>
            </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                          <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.IdAccount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDefault)
            </td>
                        <td>
                             @if (item.IsPrivate == false)
        {
            

             <div>
                                <a onclick="showInPopup('@Url.Action("AddOrEdit","Boxss",new {id=item.Id},Context.Request.Scheme)','تحديث الصندوق')" class="btn btn-info text-white"><i class="fas fa-pencil-alt"></i> تحديث الصندوق</a>
                                <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                                    <input type="hidden" asp-for="@item.Id" />
                                    <input type="submit" value="حذف" class="btn btn-danger" />
                                </form>
                            </div>

        }
                           
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <meta charset="utf-8" />
    <title>Orax Soft Hotel Admin Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta content="Hotel Managment Login" name="description" />
    <meta content="" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- App favicon -->
    <link href="~/img/favicon.png" rel="shortcut icon">



    <!-- App css -->
    <link href="~/css/site.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/bootstrap-rtl.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/app-rtl.min.css" rel="stylesheet" type="text/css" />

</head>

<body id="body" class="auth-page" style="background-image: url('assets/images/p-1.png'); background-size: cover; background-position: center center;">
    <!-- Log In page -->
    <div class="container-md">
        <div class="row vh-100 d-flex justify-content-center">
            <div class="col-12 align-self-center">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-4 mx-auto">
                            <div class="card">
                                <div class="card-body p-0 auth-header-box">
                                    <div class="text-center p-3">
                                        <a href="index.html" class="logo logo-admin">
                                            <img src="~/img/logoorax.png" height="50" alt="logo" class="auth-logo">
                                        </a>
                                        @*<h4 class="mt-3 mb-1 fw-semibold text-white font-18">Let's Get Started Metrica</h4>*@

                                        <p class="text-muted  mb-0" id="mb-0n">اوراكس سوفت</p>
                                        @*<p class="text-muted  mb-0" id="mb-0n">نظام الفنادق</p>*@
                                    </div>
                                </div>
                                <div class="card-body pt-0">

                                    <form class="my-4"  asp-action="Login">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group mb-2">
                                            <label class="form-label" asp-for="Username">اسم المستخدم</label>
                                            <input type="text" asp-for="Username" class="form-control"  placeholder="">
                                            <span asp-validation-for="Username" class="text-danger"></span>

                                        </div><!--end form-group-->

                                        <div class="form-group">
                                            <label class="form-label" asp-for="Password" >كلمة المرور</label>
                                            <input type="password" asp-for="Password" class="form-control"  placeholder="" >
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div><!--end form-group-->

                                        <div class="form-group row mt-3">
                                            <div class="col-sm-6">
                                                <div class="form-check form-switch form-switch-success">
                                                    <input class="form-check-input" type="checkbox" id="customSwitchSuccess">
                                                    <label class="form-check-label" for="customSwitchSuccess">تذكرني</label>
                                                </div>
                                            </div><!--end col-->
                                            <div class="col-sm-6 text-end">
                                                <a href="auth-recover-pw.html" class="text-muted font-13"><i class="dripicons-lock"></i> نسيت كلمة السر?</a>
                                            </div><!--end col-->
                                        </div><!--end form-group-->

                                        <div class="form-group mb-0 row">
                                            <div class="col-12">
                                                <div class="d-grid mt-3">

                                                    @*<a href="Home/Index" class="btn btn-primary btn-user btn-block">
                        تسجيل الدخول
                    </a>*@

                                                    <button class="btn btn-primary" type="submit">
                                                        تسجيل الدخول
                                                        @*<i class="fas fa-sign-in-alt ms-1"></i>*@
                                                    </button>
                                                </div>
                                            </div><!--end col-->
                                        </div> <!--end form-group-->
                                        @*</div>*@
                                    </form><!--end form-->
                                    @*<div class="m-3 text-center text-muted">
                                            <p class="mb-0">Don't have an account ?  <a href="auth-register.html" class="text-primary ms-2">Free Resister</a></p>
                                        </div>*@


                                </div><!--end card-body-->
                            </div><!--end card-->
                        </div><!--end col-->
                    </div><!--end row-->
                </div><!--end card-body-->
            </div><!--end col-->
        </div><!--end row-->
    </div><!--end container-->
    <!-- App js -->
    <script src="assets/js/app.js"></script>

</body>

</html>
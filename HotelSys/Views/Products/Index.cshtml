                        <h4 class="page-title">الخدمات الفرعية </h4>
                    </div>
                    <!--end page-title-box-->
                </div>
                <!--end col-->
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-title-box">
                        <div class="float-end">

                            <a class="btn btn-success" style="margin-bottom:10px" asp-action="Create">
                                <i class="fa fa-plus"></i>
                                <span style="color:white">  خدمة فرعية جديدة</span>
                                
                               

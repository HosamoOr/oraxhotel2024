                </div>

                <center><div id="result"></div></center>



                الخدمة الاب
                <h2>@Model.Name </h2>

                عدد الخدمات الفرعية
                <h2>@Model.countBrchService </h2>



                <div class="table-responsive">
                    <table class="table" id="tableServicesGruop">
                        <thead class="thead-light">
                            <tr>
                                
                                <th>اسم الخدمة </th>
                                <th> الاسم الانجليزي </th>

                                <th> السعر </th>

                                 <th> المجموعة الضريبية </th>

                                <th></th>

                            </tr><!--end tr-->
                        </thead>
                        <tbody>
                            @foreach (var item in Model.products)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NameEn)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Price)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.nameTaxGroup)
                                    </td>

                                    <td>
                                        <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.Id">
                                            <span style="color:white"> تعديل</span>
                                            


                                        </a> |
                                        <a asp-action="Details"  class="btn btn-primary" asp-route-id="@item.Id">

                                            <span style="color:white"> تفاصيل</span>
                                            </a> |
                                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">
                                            <span style="color:white"> حذف</span>
                                            </a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>





                </div>


            </div>





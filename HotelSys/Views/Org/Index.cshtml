              <div class="col">
                <div class="form-outline">
                    <label class="form-label"  style="margin-left: 0px;">الاسم الانجليزي</label>
                <input asp-for="NumEn" class="form-control" />
                <span asp-validation-for="NumEn" class="text-danger"></span>
                  
                <div class="form-notch"><div class="form-notch-leading" style="width: 9px;"></div><div class="form-notch-middle" style="width: 68.8px;"></div><div class="form-notch-trailing"></div></div></div>
              </div>
              <div class="col">
                <div class="form-outline">
                    <label class="form-label" for="form7Example2" style="margin-left: 0px;">الدولة</label>
               @*  <input asp-for="Country" class="form-control" />*@

                  <select asp-for="IdCountry" class="form-control" asp-items="ViewBag.IdCountry"></select>
                <span asp-validation-for="Country" class="text-danger"></span>
                  
                <div class="form-notch"><div class="form-notch-leading" style="width: 9px;"></div>
                <div class="form-notch-middle" style="width: 68px;"></div><div class="form-notch-trailing"></div></div></div>


              </div>
            </div>
   <div class="row mb-4">
              <div class="col">
                <div class="form-outline">
                    <label class="form-label"  style="margin-left: 0px;"> المدينة</label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
                  
                <div class="form-notch"><div class="form-notch-leading" style="width: 9px;"></div><div class="form-notch-middle" style="width: 68.8px;"></div><div class="form-notch-trailing"></div></div></div>

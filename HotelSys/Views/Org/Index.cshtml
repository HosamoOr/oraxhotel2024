               <!-- Number input -->
            <div class="form-outline mb-4">
                <label class="form-label" style="margin-left: 0px;">MailBox  </label>
                <input asp-for="MailBox" class="form-control" />
                <span asp-validation-for="MailBox" class="text-danger"></span>
              
            <div class="form-notch"><div class="form-notch-leading" style="width: 9px;"></div><div class="form-notch-middle" style="width: 44px;"></div><div class="form-notch-trailing"></div></div></div>
  

           @* <!-- Message input -->
            <div class="form-outline mb-4">

        <div class="card-body">
        
               <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

         
                
                <!-- Text input -->
            <div class="form-outline mb-4">
                 <label class="form-label" for="form7Example3" style="margin-left: 0px;">اسم المؤسسة</label>
              <input asp-for="NameH" class="form-control" />
              <span asp-validation-for="NameH" class="text-danger"></span>
             
            <div class="form-notch"><div class="form-notch-leading" style="width: 9px;"></div><div class="form-notch-middle" style="width: 97.6px;"></div><div class="form-notch-trailing"></div>
        </div></div>

            <!-- 2 column grid layout with text inputs for the first and last names -->

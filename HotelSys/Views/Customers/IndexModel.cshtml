                        </div>
                        <h4 class="page-title">عملائي </h4>
                    </div>
                    <!--end page-title-box-->
                </div>
                <!--end col-->
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-title-box">
                        <div class="float-end">


                          @*  <button type="button" class="btn btn-primary"
                                    onclick="@("window.location.href='" + @Url.Action("Create1", "Customers") + "'");"
                                    new { id=5 })">

                                <i class="mdi add-file-input me-2"></i>  + عميل جديد
                            </button>*@


                               <button type="button" class="btn btn-success" style="margin-bottom:10px" onclick="showInPopupBig('@Url.Action("AddOrEdit","Customers",null,Context.Request.Scheme)',' عميل جديد ')">
                                <i class="fa fa-plus"></i>  عميل جديد
                                    </button>
                               



                            @*<button type="button" class="btn btn-primary"

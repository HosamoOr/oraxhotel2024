                                    <i class="mdi add-file-input me-2"></i>  + عميل جديد
                                </button>*@

                        </div>
                        <h4 class="page-title"></h4>
                    </div>
                    <!--end page-title-box-->
                </div>


                <ul class="nav nav-pills">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="@Url.Action("Index")">عملائي</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="@Url.Action("allCusomer")">كل العملاء-المرافقين</a>
                    </li>


                </ul>
                <br />




                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">عملائي </h4>
                                @*<p class="text-muted mb-0">
                                        Tabulator allows you to paginate your data. simply set the pagination property to true.
                                    </p>*@
                            </div><!--end card-header-->
                            <div class="card-body">

                        




                <div class="table-responsive">
                        <table class="table">
                            <thead class="thead-light">
                                <tr>
                                    <th>رقم الاثبات</th>
                                    <th>نوع الاثبات</th>
                                    <th>الاسم</th>
                                    <th>مكان الاصدار</th>
                                    <th>Mobile No</th>
                                    <th>تاريخ اخر زيارة</th>
                                    <th>البريد الالكتروني</th>
                                    <th class="text-right">Action</th>
                                </tr>
                            </thead>

                            <tbody>

                                @{
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.NumProof</td>
                                            <td>@item.TypeProof</td>
                                            <td>@item.Name</td>
                                            <td>@item.LocRelease</td>
                                            <td>@item.PhoneWork</td>
                                            <td>

                                                @if (@item.VisitEndDate == null)
                                                {
                                                    <label> لا زيارات </label>

                                                }
                                                else
                                                {
                                                    @item.VisitEndDate
                                                }


                                            </td>
                                            <td>@item.Email</td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.IdmyCu"><i class="las fa-pen text-secondary font-18"></i></a>
                                                <a asp-action="Delete" asp-route-id="@item.IdmyCu"><i class="las fa-trash-alt text-danger font-18"></i></a>
                                            </td>
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>



            </div>

        </div>
    </div>
</div>




